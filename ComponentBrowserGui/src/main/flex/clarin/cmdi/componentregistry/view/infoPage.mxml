<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 xmlns:comp="clarin.cmdi.componentregistry.components.*"
		 backgroundColor="#ffffff"
		 xmlns:view="clarin.cmdi.componentregistry.view.*">

<mx:Style>
.boxStyle {
   borderStyle: solid;
   borderThickness: 2;
   borderColor: #009dff;
   cornerRadius: 8;
}
</mx:Style>

	<mx:XML id="cmdComponent"/>
	<mx:String id="headerLabel"/>

	<mx:HBox horizontalAlign="center"
			 verticalAlign="middle"
			 width="100%">
		<mx:Label id="header"
				  text="{headerLabel}"
				  fontWeight="bold"
				  fontSize="14"/>
		<mx:Button id="viewInfo"
				   label="view"
				   click="infoViewStack.selectedChild=viewPanel;"/>

		<mx:Button id="textInfo"
				   label="text"
				   click="infoViewStack.selectedChild=textPanel;"/>

		<mx:Button id="xmlInfo"
				   label="xml"
				   click="infoViewStack.selectedChild=xmlPanel;"/>

	</mx:HBox>

	<mx:ViewStack id="infoViewStack"
				  height="100%"
				  width="100%"
				  styleName="boxStyle">

		<view:viewPanel id="viewPanel"
						cmdComponent="{cmdComponent}"/>
		<view:textPanel id="textPanel"
						cmdComponent="{cmdComponent}"/>
		<view:xmlPanel id="xmlPanel"
					   cmdComponent="{cmdComponent}"/>

	</mx:ViewStack>

</mx:VBox>
