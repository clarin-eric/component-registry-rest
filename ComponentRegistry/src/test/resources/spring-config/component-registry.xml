<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans classpath:/org/springframework/beans/factory/xml/spring-beans-2.5.xsd">

    <bean id="configuration" class="clarin.cmdi.componentregistry.Configuration" factory-method="getInstance">
	<property name="adminUsersList" value="JUnit.Admin@test.com" />

<!--	<property name="generalComponentSchema" value="https://www.clarin.eu/cmd/general-component-schema.xsd" />-->
<!--	Schema on LUX16 contains Schematron rules, not yet in production... -->
	<property name="generalComponentSchema" value="http://lux16.mpi.nl/general-component-schema.xsd" />
<!--	<property name="componentSpecSchemaLocation" value="http://www.clarin.eu/cmd https://www.clarin.eu/cmd/general-component-schema.xsd" />-->
	<property name="componentSpecSchemaLocation" value="http://www.clarin.eu/cmd http://lux16.mpi.nl/general-component-schema.xsd" />

	<property name="component2SchemaXsl" value="https://infra.clarin.eu/cmd/xslt/comp2schema-v2/comp2schema.xsl"/>

	<property name="isocatRestUrl" value="http://www.isocat.org/rest/" />
    <!-- Extra attribute keys that are passed in a shibboleth authenticated request principal.
         You need to configure the shhaa.xml file to enable the extra attributes.
     -->
	<property name="displayNameShibbolethKeys">
	    <list>
		<value>displayName</value>
		<value>commonName</value>
	    </list>
	</property>
    </bean>
</beans>
