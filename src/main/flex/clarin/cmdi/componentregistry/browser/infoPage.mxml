<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 xmlns:comp="clarin.cmdi.componentregistry.common.components.*"
		 backgroundColor="#ffffff"
		 xmlns:browser="clarin.cmdi.componentregistry.browser.*">

	<mx:XML id="cmdComponent"/>
	<mx:String id="headerLabel"/>

	<mx:HBox horizontalAlign="center"
			 verticalAlign="middle"
			 width="100%">
		<mx:Label id="header"
				  text="{headerLabel}"
				  fontWeight="bold"
				  fontSize="14"/>
        <mx:ToggleButtonBar id="toggleBar" dataProvider="{infoViewStack}"/>
	</mx:HBox>

	<mx:ViewStack id="infoViewStack"
				  height="100%"
				  width="100%"
				  styleName="borderStyle">

		<browser:xmlBrowsePanel id="viewPanel" label="view"
						cmdComponent="{cmdComponent}"/>
		<browser:xmlPanel id="xmlPanel" label="xml"
					   cmdComponent="{cmdComponent}"/>

	</mx:ViewStack>

</mx:VBox>
