<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 xmlns:local="clarin.cmdi.componentregistry.*"
		 width="100%"
		 height="88"
		 backgroundColor="#DDE3EF">

	<local:Component id="component"/>

	<mx:Label text="{component.description.name}"
			  width="100%"/>
	<mx:Label text="{component.description}"
			  width="100%"/>
	<mx:Label text="{component.description.description}"
			  width="100%"/>
	<mx:Label text="{component.componentMD.xml.toString()}"
			  width="100%"/>
</mx:VBox>

