<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 xmlns:comp="clarin.cmdi.componentregistry.components.*">
	<mx:Script>
		<![CDATA[
			import mx.events.CollectionEvent;
			import clarin.cmdi.componentregistry.events.BrowserSelectionEvent;
			import clarin.cmdi.componentregistry.ItemDescription;
			import adobe.utils.CustomActions;

			private function addMouseListener():void {
				if (!infoTextArea.hasEventListener(MouseEvent.MOUSE_WHEEL)) {
					infoTextArea.addEventListener(MouseEvent.MOUSE_WHEEL, onMouseWheelEvent);
				}
			}

			private function onMouseWheelEvent(event:MouseEvent):void {
				trace("onMouseWheelEvent2!");
				trace(event.delta);
			}
		]]>
	</mx:Script>


	<mx:XML id="cmdComponent"/>
	<comp:ScrollableTextArea id="infoTextArea"
				 styleName="xmlTextArea"
				 editable="false"
				 text="{cmdComponent}"
				 width="100%"
				 height="100%"
				 creationComplete="addMouseListener()" />
</mx:VBox>
